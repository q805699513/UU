<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_discount_linearla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/lzh_discount_background" >

        <LinearLayout 
            android:id="@+id/discount_top_linear_expired"
            android:layout_width="42dp"
            android:layout_height="16dp"
            android:background="@drawable/discount_radius"
            android:layout_marginLeft="8dp"
	        android:layout_marginTop="15dp"
	        android:visibility="gone">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:layout_marginRight="4dp"
	            android:layout_marginTop="3dp"
	            android:layout_marginBottom="4dp"
	            android:text="即将到期"
	            android:textColor="#ffffff"
	            android:textSize="8dp" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/discount_top_linear_use"
            android:layout_width="28dp"
            android:layout_height="12dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:text="已使用"
            android:textColor="#98999a"
            android:textSize="9sp" 
            android:visibility="gone"/>
		<LinearLayout 
            android:id="@+id/discount_mid_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/discount_mid_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom"
	            android:text="￥"
	            android:textColor="#00a1d9"
	            android:textSize="15sp" />
	        
	        <TextView
	            android:id="@+id/discount_mid_price"
	            android:layout_width="55dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left|bottom"
	            android:text="100"
	            android:textColor="#00a1d9"
	            android:textSize="32sp" />
	        
	        <TextView
	            android:id="@+id/discount_mid_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="48dp"
	            android:layout_gravity="center"
	            android:text="海南旅游专项券"
	            android:textColor="#000000"
	            android:textSize="14sp" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/discount_bottom_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
	        android:layout_marginTop="75dp"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/discount_mid_order"
	            android:layout_width="58dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="满200元使用"
	            android:textColor="#98999a"
	            android:textSize="10sp" />
	        
	        <TextView
	            android:id="@+id/discount_mid_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="58dp"
	            android:layout_gravity="center"
	            android:text="2016.01.20 23:59到期"
	            android:textColor="#98999a"
	            android:textSize="10sp" />
	        
	        <TextView
	            android:id="@+id/discount_mid_receive"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="22dp"
	            android:layout_gravity="center"
	            android:text="立即领取>"
	            android:textColor="#00a1d9"
	            android:textSize="11sp"
	            android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
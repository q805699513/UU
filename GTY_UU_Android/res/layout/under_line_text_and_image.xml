<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/under_line_text_and_image_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_bg" >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/under_line_text_and_image_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_alignParentLeft="true" />

        <TextView     
            android:layout_centerVertical="true"      
            android:layout_marginRight="10dp"
            android:id="@+id/under_line_text_and_image_rigth_text"
            android:layout_toLeftOf="@+id/under_line_text_and_image_rigth_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#98999a"
            android:singleLine="true"
            android:maxEms="12"
            android:ellipsize="end"
            android:textSize="14sp"
             />
        <TextView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/under_line_text_and_image_rigth_textRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:singleLine="true"
            android:maxEms="12"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/under_line_text_and_image_rigth_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/person_compile_enter" />
    </RelativeLayout>

    <View
        android:id="@+id/under_line_text_and_image_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@id/under_line_text_and_image_rel"
        android:background="#e5e5e5" />

</RelativeLayout>
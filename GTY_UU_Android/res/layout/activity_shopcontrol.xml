<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.uugty.uu.common.myview.TopBackView
            android:id="@+id/shop_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/shop_control_publish"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="发布服务"
            android:textSize="15sp"
            android:textColor="#f15353"
            android:gravity="center"
            android:layout_marginRight="9dp"
            android:layout_alignRight="@+id/shop_top"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/shop_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/SellRadioBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="销售中"
            android:textSize="14sp"
            android:textColor="#f15353" />
         <RadioButton
            android:id="@+id/StopRadioBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="已下架"
            android:textSize="14sp"
            android:textColor="#666666" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5" />

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/shop_control_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>

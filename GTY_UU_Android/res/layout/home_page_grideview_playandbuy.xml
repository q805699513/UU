<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp">

    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_page_gridview_image"
        android:layout_width="41dp"
        android:layout_height="41dp"
        fresco:failureImage="@drawable/square_no_pricture"
        android:layout_marginLeft="13dp"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/square_no_pricture"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:viewAspectRatio="1.0" />
   
    <TextView
        android:id="@+id/home_page_gridview_text"
        android:layout_below="@+id/home_page_gridview_image"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="默认" 
        android:textColor="#666666"
        android:textSize="12sp" />

     
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/phone_dialog_bg_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:background="@drawable/lzh_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/upgrade_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="right"
            android:src="@drawable/lzh_upgradeclose"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:background="@color/white"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="uu客升级啦"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#98999a"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/lzh_upgard_black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修复若干Bug,优化交互体验"
                android:textColor="#98999a"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/lzh_upgard_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导游设置自己的身价,更好的推销自己"
                android:textColor="#98999a"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/lzh_upgard_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开通会员的用户可在批发市场中购买全国低价服务"
                android:textColor="#98999a"
                android:textSize="12sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/leadPages_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="#00A1D9"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>



</LinearLayout>

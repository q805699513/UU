<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/load_date_frag2"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/order_finish_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/order_auto_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
             android:divider="#f5f5f5"
            android:dividerHeight="10dp"
            android:scrollbars="none" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.uugty.uu.common.myview.WaveView
        android:id="@+id/order_list_no_data_end_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="-60dp" >

        <ImageView
            android:id="@+id/order_list_no_data_end_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/order_end" />

        <TextView
            android:id="@+id/order_list_no_data_end_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="没有购买任何路线"
            android:textColor="@color/base_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_list_no_data_end_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="没有购买任何路线，快去发现好风景"
            android:textColor="@color/login_hint_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/order_list_no_data_end_btn"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/text_view_board"
            android:text="去浏览"
            android:textColor="@color/base_text_color"
            android:textSize="14sp" />
    </com.uugty.uu.common.myview.WaveView>
</RelativeLayout>
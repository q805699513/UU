<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <com.uugty.uu.common.myview.TopBackView
            android:id="@+id/person_descrip_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/persn_descrip_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="确认"
            android:textColor="#00A1D9"
            android:textSize="15sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/phone_dialog_bg_shape"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="14dp"
        android:paddingRight="11dp"
        android:paddingTop="13dp" >

        <EditText
            android:id="@+id/person_descrip_text_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|top"
            android:text="我是（姓名），性别男/女 我现在（某个行业） 从事（职务工作）。"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/person_descrip_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="left|top"
            android:text="我毕业于（毕业院校），是一个（性格）。 我有（从业年限）年（从业领域）从业经验， 期间（具体做了哪些项目或工作）"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/person_descrip_text_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="left|top"
            android:text="我擅长（兴趣爱好：吉他高手、手工艺人、武术、健身、烹饪高手），我曾经做过有趣、牛逼的事（环球旅行、街边卖唱、出版小说，考古）描述一下过程。"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/person_descrip_text_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="left|top"
            android:text="我能提供的服务（专业咨询，教授手艺、组织活动），我有那些资源（房车、活动场地，各种音乐设备，各种茶具）。"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
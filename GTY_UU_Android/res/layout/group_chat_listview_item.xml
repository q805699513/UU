<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="60dp" >

        <com.uugty.uu.common.myview.CirculHeadImage
            android:id="@+id/group_chat_avatar_image"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/group_chat_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/group_chat_avatar_image"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="#565a5c"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/group_chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/group_chat_avatar_image"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="#98999a"
            android:textSize="13sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="65dp"
            android:background="#e5e5e5" />
    </RelativeLayout>

    
</LinearLayout>
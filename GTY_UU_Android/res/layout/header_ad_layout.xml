<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 主题图片 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/lzh_homebackground">
        </View>

        <com.uugty.uu.common.myview.SlideShowView
            android:id="@+id/home_page_slideview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_outchina_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lzh_outchina"/>
        <TextView
            android:id="@+id/home_outchina_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/lzh_outlocation"
            android:drawablePadding="8dp"
            android:text="美国"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/home_outchina_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="12dp"
            android:text="时间"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

</LinearLayout>

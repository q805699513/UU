<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:scrollbars="none"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.uugty.uu.common.myview.WaveView
            android:id="@+id/nologin_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="个人资料"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nologin_person_rel"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" >

                <com.uugty.uu.common.myview.CirculHeadImage
                    android:id="@+id/nologin_person_circul_imageview"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp" >
                </com.uugty.uu.common.myview.CirculHeadImage>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@+id/nologin_person_circul_imageview"
                    android:text="未登录"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/person_compile_enter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />
            </RelativeLayout>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/home_no_login_route_lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/home_no_login_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/home_no_login_contact_us_lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/home_no_login_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <Button
                android:id="@+id/login_insert"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/my_login_insert_btn_bg"
                android:text="登录或注册"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/weix_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_weix_login_btn_bg"
                android:text="微信登录"
                android:textColor="#ffffff" />
        </com.uugty.uu.common.myview.WaveView>

        <com.uugty.uu.common.myview.WaveView
            android:id="@+id/login_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_person_rel"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" >

                <com.uugty.uu.common.myview.CirculHeadImage
                    android:id="@+id/login_person_circul_imageview"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp" >
                </com.uugty.uu.common.myview.CirculHeadImage>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@+id/login_person_circul_imageview"
                    android:orientation="vertical" >

                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >
                        
	                    <TextView
	                        android:id="@+id/login_user_name"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_centerVertical="true"
	                        android:textColor="#000000"
	                        android:textSize="15sp" />
	                    
	                    <ImageView
	                        android:id="@+id/login_user_name_ver"
	                        android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                            android:layout_gravity="center"
	                        android:layout_marginLeft="5dp"
	                        android:visibility="visible"
	                        android:background="@drawable/lzh_veru" />
	                    
	                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/login_user_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="快来完善个人描述吧～"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/login_user_sex"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/person_compile_enter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/my_routeline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/route_left_img"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lzh_wodeshop" />

                    <TextView
                        android:id="@+id/route_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:text="我的小店"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="14dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="|"-->
                    <!--android:textColor="#e5e5e5" />-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/person_compile_enter" />


                <!--<RelativeLayout-->
                    <!--android:id="@+id/release_route_line"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1" >-->

                    <!--<ImageView-->
                        <!--android:id="@+id/route_right_img"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginLeft="48dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:src="@drawable/release_route_img" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_toRightOf="@+id/route_right_img"-->
                        <!--android:text="发布服务"-->
                        <!--android:textColor="#000000"-->
                        <!--android:textSize="15sp" />-->
                <!--</RelativeLayout>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e5e5e5" />

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/my_buy_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/my_receive_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/my_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>
            
            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/my_discount_ticket"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height">
            </com.uugty.uu.common.myview.UserLineTextAndImage>


            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/my_invitation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <com.uugty.uu.common.myview.UserLineTextAndImage
                android:id="@+id/my_collect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp" >
            </com.uugty.uu.common.myview.UserLineTextAndImage>

            <RelativeLayout
                android:id="@+id/my_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_userlin_height"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/setting_left_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_login" />

                <TextView
                    android:id="@+id/setting_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/setting_left_img"
                    android:text="设置"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/setting_route_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@+id/user_line_settingimage_rigth_image"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:text="帮助"
                    android:textColor="#00a1d9"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/user_line_settingimage_rigth_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/person_compile_enter" />
            </RelativeLayout>
        </com.uugty.uu.common.myview.WaveView>
        <View 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="52dp"
    android:background="@drawable/lzh_popwindow"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/right_menu_lin" >

    <LinearLayout
        android:id="@+id/shop_edit"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lzh_edit"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="9sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_drop"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lzh_drop"/>
        <TextView
            android:id="@+id/shop_text"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下架"
            android:textColor="#ffffff"
            android:textSize="9sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_delete"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lzh_delete"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="9sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_share"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lzh_shopshare"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="#ffffff"
            android:textSize="9sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_up"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lzh_up"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="置顶"
            android:textColor="#ffffff"
            android:textSize="9sp"/>

    </LinearLayout>
</LinearLayout>

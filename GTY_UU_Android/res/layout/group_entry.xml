<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.uugty.uu.common.myview.TopBackView
        android:id="@+id/group_entry_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/group_entry_rel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/group_entry_title"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <com.uugty.uu.common.myview.CirculHeadImage
            android:id="@+id/group_entry_avatar_image"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/group_entry_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/group_entry_avatar_image"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="#565a5c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_entry_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/group_entry_avatar_image"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="#98999a"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/group_entry_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:textColor="#00A1D9"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="65dp"
            android:background="#e5e5e5" />
    </RelativeLayout>
    <!-- 群介绍 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_entry_rel"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="13dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群介绍"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_entry_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="群介绍"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <com.uugty.uu.common.myview.WaveView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/group_entry_apply_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/guide_main_blank_background"
            android:text="申请加群"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </com.uugty.uu.common.myview.WaveView>

</RelativeLayout>
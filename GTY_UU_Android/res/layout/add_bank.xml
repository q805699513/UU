<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder"
        android:gravity="center_vertical" >
        <include layout="@layout/tabbar_text" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="添加银行卡"
            android:textColor="@color/black"
            android:textSize="18sp" />
       
      
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/add_bank_card_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="持卡人"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_bank_card_user_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textColor="#565a5c"
            android:textSize="17sp"
            android:maxLength="10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:background="#E5E5E5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/add_bank_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="卡号"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_bank_card_num_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="51dp"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textColor="#565a5c"
            android:textSize="17sp"
            android:numeric="integer"
            android:maxLength="23"
            android:maxLines="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:background="#E5E5E5" />
    </RelativeLayout>

    <Button
        android:id="@+id/add_card_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/wallet_commit_bg_shape"
        android:text="确定"
        android:textColor="@drawable/wallet_commit_bg_selector" />

    <LinearLayout
        android:id="@+id/add_bank_card_default_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/add_bank_card_default"
            android:layout_width="18dp"
            android:layout_height="18dp"
            fresco:placeholderImage="@drawable/route_tianxia1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="将此银行卡设为默认提现银行卡"
            android:layout_marginLeft="5dp"
            android:textColor="#98999a"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
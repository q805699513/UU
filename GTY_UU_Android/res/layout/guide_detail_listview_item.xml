        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/guide_detail_title_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/guide_detail_online_route_image"
                    android:layout_width="31dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp"
                    fresco:placeholderImage="@drawable/recmmend_road_online_route_image" />

                <TextView
                    android:id="@+id/guide_detail_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/base_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/consult_person_truename"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/lzh_realname" />

                <TextView
                    android:id="@+id/consult_person_education"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/lzh_academic" />

                <TextView
                    android:id="@+id/consult_person_drive"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/lzh_drive"/>

                <TextView
                    android:id="@+id/consult_person_guide"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/lzh_guide"/>

                <TextView
                    android:id="@+id/consult_person_veru"
                    android:layout_width="36dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/lzh_veru"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/home_new_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lzh_zuixing"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:text="最新上线"
                        android:textColor="#98999a"
                        android:textSize="10sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_look_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lzh_liulang"/>

                    <TextView
                        android:id="@+id/guide_detail_item_look_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:text="浏览过"
                        android:textColor="#98999a"
                        android:textSize="10sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_travel_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lzh_chuxing"/>

                    <TextView
                        android:id="@+id/guide_detail_item_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:text="参加过"
                        android:textColor="#98999a"
                        android:textSize="10sp"
                        />


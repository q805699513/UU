<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <com.uugty.uu.common.myview.TopBackView
        android:id="@+id/person_valid_resut_topback"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/person_valid_resut_system_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:src="@drawable/person_valid_result_scuess" />

    <TextView
        android:id="@+id/person_valid_resut_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="上传成功"
        android:textColor="#565a5c"
        android:textSize="23sp" />
    
    <TextView
        android:id="@+id/person_valid_result_descrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="您的证件上传成功，等待审核!"
        android:textColor="#565a5c"
        android:textSize="17sp" />

    <Button
        android:id="@+id/person_valid_result_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/person_valid_btn_bg"
        android:text="验证其他信息"
        android:textColor="#ffffff"
        android:textSize="17sp" />
</LinearLayout>
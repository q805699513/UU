<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">

    <com.uugty.uu.common.myview.TopBackView
        android:id="@+id/chat_custom_title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="0dp"
                android:paddingStart="12dp"
                android:text="填写相关的旅行信息"
                android:textColor="#666666"
                android:textSize="10sp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/chat_custom_starting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >
            </com.uugty.uu.common.myview.UnderLineTextAndImage>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/chat_custom_destination"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >
            </com.uugty.uu.common.myview.UnderLineTextAndImage>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/chat_custom_starting_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >
            </com.uugty.uu.common.myview.UnderLineTextAndImage>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="旅游天数"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/boder_solid_black"
                    android:minWidth="110dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/travel_days_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/chat_costom_minus" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5" />

                    <TextView
                        android:id="@+id/chat_costom_travel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="35dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5" />

                    <ImageView
                        android:id="@+id/travel_days_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/chat_costom_image_hint" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="出行人数"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/boder_solid_black"
                    android:minWidth="110dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/people_num_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/chat_costom_minus" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5" />

                    <TextView
                        android:id="@+id/chat_costom_people"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="35dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5" />

                    <ImageView
                        android:id="@+id/people_num_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/chat_costom_image_hint" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="预算"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/boder_solid_black"
                    android:minWidth="110dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/price_num_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/chat_costom_minus" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5" />

                    <TextView
                        android:id="@+id/chat_costom_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="35dp"
                        android:text="500/元"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5" />

                    <ImageView
                        android:id="@+id/price_num_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/chat_costom_image_hint" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="0dp"
                android:paddingStart="12dp"
                android:text="点击添加标签"
                android:textColor="#666666"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chat_custom_label1"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder_solid_black"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="亲子游"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chat_custom_label2"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder_solid_black"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="自由行"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chat_custom_label3"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder_solid_black"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="亲友游"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chat_custom_label4"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder_solid_black"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="蜜月"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chat_custom_label5"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/boder_solid_black"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="陪老人"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="0dp"
                android:paddingStart="12dp"
                android:text="填写联系人信息，方便客服与您联系"
                android:textColor="#666666"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:text="姓名"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.uugty.uu.common.myview.EmojiEdite
                    android:id="@+id/chat_costom_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="必填"
                    android:maxLength="11"
                    android:paddingEnd="12dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="12dp"
                    android:paddingStart="0dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#98999a"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:text="手机号"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.uugty.uu.common.myview.EmojiEdite
                    android:id="@+id/chat_costom_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="必填"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:paddingEnd="12dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="12dp"
                    android:paddingStart="0dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#98999a"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="0dp"
                android:paddingStart="12dp"
                android:text="其他需求"
                android:textColor="#666666"
                android:textSize="10sp" />

            <com.uugty.uu.common.myview.EmojiEdite
                android:id="@+id/chat_costom_need_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/text_view_board"
                android:gravity="left"
                android:hint="如果你的旅行中有老人小孩需要特别照顾，或者其他的问题可以在此处详尽说明(500字)"
                android:lineSpacingExtra="3dp"
                android:maxLength="500"
                android:minHeight="170dp"
                android:paddingBottom="11dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="11dp"
                android:textColor="#000000"
                android:textColorHint="#98999a"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/chat_costom_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00a1d9"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>
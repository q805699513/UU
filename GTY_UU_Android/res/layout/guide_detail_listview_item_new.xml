<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/guide_detail_item_image"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        fresco:failureImage="@drawable/uu_default_image_one"
        fresco:failureImageScaleType="fitCenter"
        fresco:placeholderImage="@drawable/default_image"
        fresco:placeholderImageScaleType="fitCenter" />


    <LinearLayout
        android:id="@+id/recmmend_road_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/guide_detail_item_title"
            android:layout_marginTop="13dp"
            android:layout_marginRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:ellipsize="end"
            android:maxEms="18"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:textColor="@color/login_hint_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/guide_detail_item_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:layout_marginLeft="5dp"
                android:textColor="@color/login_hint_color"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="浏览"
                android:textColor="@color/login_hint_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/guide_detail_item_look_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:layout_marginLeft="5dp"
                android:textColor="@color/login_hint_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/guide_nowprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#f15353"
                android:text="￥36"
                />

            <TextView
                android:id="@+id/guide_marketprice"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="bottom"
                android:textColor="#98999a"
                android:text="￥36"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical" >
        <include layout="@layout/tabbar_text" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="添加提现账号"
            android:textColor="#000000"
            android:textSize="18sp" />
       
      
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="12dp" >

        <TextView
            android:id="@+id/add_alipay_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="支付宝账号:"
            android:textColor="#010101"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_alipay_card_num_edit"
            android:layout_toRightOf="@+id/add_alipay_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="输入支付宝账号"
            android:textColorHint="#e5e5e5"
            android:textColor="#000000"
            android:textSize="15sp"
            android:numeric="integer"
            android:maxLength="23"
            android:maxLines="1"/>

    </RelativeLayout>

    <Button
        android:id="@+id/add_alipay_card_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/wallet_commit_bg_shape"
        android:text="验证账号"
        android:textColor="@drawable/wallet_commit_bg_selector" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <com.uugty.uu.common.myview.TopBackView
        android:id="@+id/order_pay_top_title_rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/activity_orderpays_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_pay_top_title_rel"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/order_pay_top_title_rel"
            android:orientation="vertical" >
            
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

                <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="96dp"
	                android:orientation="horizontal" >
	
	                <com.facebook.drawee.view.SimpleDraweeView
	                    android:id="@+id/order_pay_user_img"
	                    android:layout_width="75dp"
	                    android:layout_height="75dp"
	                    android:layout_marginBottom="11dp"
	                    android:layout_marginLeft="12dp"
	                    android:layout_marginRight="12dp"
	                    android:layout_marginTop="11dp"
	                    android:scaleType="fitXY" />
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:orientation="vertical" >
	
	                    <TextView
	                        android:id="@+id/order_pay__confirm_topic"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginRight="12dp"
	                        android:layout_marginTop="17dp"
	                        android:text="测试"
	                        android:ellipsize="end"
	                        android:textColor="#282828"
	                        android:textSize="15sp" />
	
	                    <TextView
	                        android:id="@+id/order_pay_confirm_price"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginRight="12dp"
	                        android:layout_marginTop="16dp"
	                        android:text="测试"
	                        android:textColor="#000000"
	                        android:textSize="16sp" />
	                </LinearLayout>
	            </LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#f5f5f5" />
			<RelativeLayout
				android:id="@+id/activity_pay_category"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="#ffffff"
				android:visibility="gone"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/order_kucun1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="16dp"
					android:text="库存"
					android:textColor="#000000"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/order_kucun"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@+id/order_kucun1"
					android:layout_alignParentRight="true"
					android:layout_marginRight="14dp"
					android:gravity="center"
					android:maxWidth="80dp"
					android:textColor="#f15353"
					android:text="测试" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:layout_alignParentBottom="true"
					android:background="#e5e5e5" />
			</RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="预定数量"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/boder_solid_black"
                        android:minWidth="110dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/reserve_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/chat_costom_minus" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#e5e5e5" />

                        <TextView
                            android:id="@+id/reserve_num"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minWidth="35dp"
                            android:text="1"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#e5e5e5" />

                        <ImageView
                            android:id="@+id/reserve_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/chat_costom_image_hint" />
                    </LinearLayout>
                </RelativeLayout>
                
                 <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

                <RelativeLayout
                    android:id="@+id/activity_paypricea_select_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_chuxin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="出行时间"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/order_pay_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/order_chuxin"
                        android:gravity="center"
                        android:hint="选择出行时间"
                        android:textColor="#98999a"
                        android:textColorHint="@color/login_hint_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/activity_payprice_imageview_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/person_compile_enter" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#e5e5e5" />
                </RelativeLayout>
	            
                <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="14dp"
                    android:text="游客信息"
                    android:textColor="#98999a"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />

                <RelativeLayout
                    android:id="@+id/activity_paypricea_add_person"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="19dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:text="添加游客信息"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uu_tourist_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2.5dp"
                        android:layout_toLeftOf="@+id/activity_touristnum_imageview_item"
                        android:gravity="center"
                        android:hint="选择出行人"
                        android:textColor="#000000"
                        android:textColorHint="#98999a"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/activity_touristnum_imageview_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/person_compile_enter" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="14dp"
                    android:text="联系人信息（选填）"
                    android:textColor="#98999a"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />
                
                <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="140dp"
	                android:background="#ffffff"
	                android:orientation="horizontal" >
                    
                    <LinearLayout
	                	android:layout_width="90dp"
	                	android:layout_height="match_parent"
	                	android:background="#ffffff"
	                	android:orientation="vertical" >
                    	
                        <TextView
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="12dp"
		                    android:layout_marginLeft="14dp"
		                    android:text="姓名"
		                    android:textSize="15dp"
		                    android:textColor="#000000" />
                        <TextView
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="30dp"
		                    android:layout_marginLeft="14dp"
		                    android:text="手机号"
		                    android:textSize="15dp"
		                    android:textColor="#000000" />
                        <TextView
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="30dp"
		                    android:layout_marginLeft="14dp"
		                    android:text="备注"
		                    android:textSize="15dp"
		                    android:textColor="#000000" />
                    
                	</LinearLayout>
                
                    <LinearLayout
	                	android:layout_width="match_parent"
	                	android:layout_height="match_parent"
	                	android:background="#ffffff"
	                	android:orientation="vertical" >
                        
                    <com.uugty.uu.common.myview.EmojiEdite
                        android:id="@+id/pay_order_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="12dp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="请填写真实姓名"
                        android:textColor="@drawable/edittext_select_color"
                        android:textColorHint="@color/login_hint_color"
                        android:textSize="13sp" />
                    <View
		                android:layout_width="match_parent"
		                android:layout_height="1dp"
		                android:background="#f5f5f5" />
                    
                    <com.uugty.uu.common.myview.EmojiEdite
                        android:id="@+id/pay_order_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp"
                        android:maxLength="11"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="方便向导与您取得联系"
                        android:textColor="@drawable/edittext_select_color"
                        android:textColorHint="@color/login_hint_color"
                        android:textSize="13sp" />
                    <View
		                android:layout_width="match_parent"
		                android:layout_height="1dp"
		                android:background="#f5f5f5" />
                    <com.uugty.uu.common.myview.EmojiEdite
                        android:id="@+id/pay_order_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="如有特殊需求，请备注"
                        android:textColor="@drawable/edittext_select_color"
                        android:textColorHint="@color/login_hint_color"
                        android:textSize="13sp" />
                    
                    
                	</LinearLayout>
                    
                </LinearLayout>
                

            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="14dp"
                    android:text="优惠信息"
                    android:textColor="#98999a"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />

                <RelativeLayout
                    android:id="@+id/activity_payOrder_add_discount"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#ffffff"
                    android:visibility="gone"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="19dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:text="代金券"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    
                    <TextView
                        android:id="@+id/uu_tv_discountRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="19dp"
                        android:layout_marginLeft="89dp"
                        android:layout_marginTop="14dp"
                        android:text="100元代金券"
                        android:textColor="#98999a"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/uu_order_discountRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="11dp"
                        android:layout_toLeftOf="@+id/activity_touristnum_imageview_item1"
                        android:gravity="center"
                        android:text="立即领取"
                        android:visibility="invisible"
                        android:textColor="#00a1d9"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/activity_touristnum_imageview_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/person_compile_enter" />
                </RelativeLayout>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="14dp"
                    android:text="如有其他需求，请在留言中注明"
                    android:textColor="#98999a"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="备注留言："
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.uugty.uu.common.myview.EmojiEdite
                        android:id="@+id/pay_order_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="给向导留言，最多300字"
                        android:maxLength="50"
                        android:maxLines="2"
                        android:textColor="@drawable/edittext_select_color"
                        android:textColorHint="@color/login_hint_color"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#F5F5F5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="注意事项"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:text="支付订单后，导游圈会尽快响应您的订单，您会收到系统短信。因特殊情况需取消订单，请直接提交申请，或和工作人员联系，电话:400-600-8669"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>
         </LinearLayout>
    </ScrollView>
	<Button
		android:id="@+id/order_pay_commit_btn"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:background="#f15353"
		android:text="确认支付"
		android:textColor="#ffffff" />
    

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dynamic_comments_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/dynamic_avatar_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                fresco:placeholderImage="@drawable/no_default_head_img"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/white"
                fresco:roundingBorderWidth="1dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/dynamic_avatar_img"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dynamic_username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="崽崽"
                    android:textColor="#1f263b"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/dynamic_praise_img"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dynamic_createtimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="37dp"
                android:layout_toRightOf="@+id/dynamic_avatar_img"
                android:text="12.00AM"
                android:textColor="#969797"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dynamic_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text="我手拿流星弯月刀 喊着响亮的口号，前方何人报上名儿 有能耐你别跑，我一生戎马刀上飘 见过英雄弯下小蛮腰，飞檐走壁能飞多高 我坐船练习水上漂"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="12dp"
        android:background="#e5e5e5" />

    
    <TextView 
        android:id="@+id/dynamic_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
    android:layout_marginLeft="66dp"
    android:layout_marginRight="12dp"/>


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="12dp"
        android:background="#e5e5e5"
        android:visibility="gone" />

</LinearLayout>
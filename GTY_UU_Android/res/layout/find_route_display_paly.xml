<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="17dp" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/find_route_display_paly_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:failureImage="@drawable/uu_default_image_one"
        fresco:failureImageScaleType="fitCenter"
        fresco:placeholderImage="@drawable/default_image"
        fresco:placeholderImageScaleType="fitXY"/>
    <!-- 时间 -->

    <LinearLayout
        android:id="@+id/findfrag_play_data_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Day"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/find_route_display_play_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/find_route_display_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="09:00"
            android:textColor="@android:color/black" />
    </LinearLayout>
    <!-- 图片说明 -->

    <TextView
        android:id="@+id/find_route_display_play_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/route_selected_text_color"
        android:textSize="14dp" />

</LinearLayout>
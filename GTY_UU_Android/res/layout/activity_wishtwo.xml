<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wishtwo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f1f1f1"
    android:orientation="vertical" >
    
    <com.uugty.uu.common.myview.TopBackView 
        android:id="@+id/chat_friends_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/wish_second_no_data_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/wish_second_no_data_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wish_second_no_data_image" />

        <TextView
            android:id="@+id/wish_second_no_data_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wish_second_no_data_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="你还没有添加任何好友"
            android:textColor="@color/base_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wish_second_no_data_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wish_second_no_data_text_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="你还没有添加任何好友，快去看看吧"
            android:textColor="@color/login_hint_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/wish_second_no_data_btn"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_below="@+id/wish_second_no_data_text_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/text_view_board"
            android:text="去看看"
            android:textColor="@color/base_text_color"
            android:textSize="14sp" />
    </RelativeLayout> 

    <ListView
        android:id="@+id/activity_wish_listview_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#f5f5f5"
        android:dividerHeight="0.5dp"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:clipChildren="true"
        android:layout_below="@id/chat_friends_title" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/load_date_discount"
    android:orientation="vertical" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/discount_finish_swipe_container"
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/discount_auto_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:divider="#f5f5f5"
            android:dividerHeight="10dp"
            android:scrollbars="none" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.uugty.uu.common.myview.WaveView
        android:id="@+id/discount_list_no_data_end_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="#ffffff"
        android:layout_marginTop="-60dp" >

        <ImageView
            android:id="@+id/discount_list_no_data_end_image"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lzh_nodiscount" />

        <TextView
            android:id="@+id/discount_list_no_data_end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您没有优惠卷"
            android:textColor="#98999a"
            android:textSize="14sp" />

    </com.uugty.uu.common.myview.WaveView>
</RelativeLayout>
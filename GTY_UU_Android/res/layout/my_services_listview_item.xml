<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#ffffff"
        android:orientation="horizontal" >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_services_listview_item_image"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="11dp"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/default_image"
            fresco:placeholderImageScaleType="centerCrop"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/orderDetail_Top"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_services_listview_item_route_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:text="测试"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="￥"
                    android:textColor="#F15353"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/my_services_listview_item_route_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:text="36"
                    android:textColor="#F15353"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xiaolian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:text="销量:"
                    android:textColor="#98999a"
                    android:textSize="12sp" />

                <TextView
                    android:layout_toRightOf="@+id/xiaolian"
                    android:id="@+id/service_sellcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="7dp"
                    android:text="10"
                    android:textColor="#98999a"
                    android:textSize="12sp" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/service_popwindow_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/service_popwindow"
                android:layout_gravity="bottom"
                android:background="@drawable/lzh_popwindowclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e5" />

</LinearLayout>

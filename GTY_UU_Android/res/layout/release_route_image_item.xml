<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minHeight="350dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/release_route_round_iamge_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5e5e5"
        android:minHeight="@dimen/main_image_hight" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/release_route_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:placeholderImage="@drawable/default_image"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImageScaleType="centerCrop" />

        <FrameLayout
            android:id="@+id/release_route_image_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/release_route_head_crame" />
        </FrameLayout>
    </RelativeLayout>

    <!-- 为便于计算SlowScrollView滚动距离 -->

    <LinearLayout
        android:id="@+id/route_foot_address_edit_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="210dp" >

        <com.uugty.uu.common.myview.EmojiEdite
            android:id="@+id/route_foot_address_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:hint="请在此处描述您的服务详情，您可以随意添加相关的时间，注意事项，费用，服务的亮点特点等等。"
            android:maxLength="400"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#666666"
            android:textColorHint="#98999a"
            android:textSize="13sp"
            android:background="@drawable/text_view_board"
            android:paddingLeft="14dp"
            android:paddingTop="11dp"
            android:paddingRight="14dp"
            android:paddingBottom="11dp"
            android:lineSpacingExtra="3dp" />
    </LinearLayout>

</LinearLayout>
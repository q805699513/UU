<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
	<LinearLayout 
	    android:layout_width="match_parent"
   		android:layout_height="match_parent"
    	android:background="#f5f5f5"
    	android:orientation="vertical"
	    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/right_view_withdrawcash_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/phone_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="提现"
            android:textColor="@color/black"
            android:textSize="18sp" />

		<TextView
			android:id="@+id/withdraw_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="13dp"
			android:text="提现说明"
			android:textColor="@color/black"
			android:textSize="15sp" />
    </RelativeLayout>
	<RelativeLayout
	    android:background="#ffffff"
        android:id="@+id/can_money"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
			android:textSize="15sp"
            android:text="可提现金额"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/with_Draw_Money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#00a1d9" />
    </RelativeLayout>
	
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/widthdraw_cash_way_rel"
		android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

		<LinearLayout
			android:id="@+id/linear_account"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:visibility="gone">

			<TextView
				android:id="@+id/bank_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:textSize="15sp"
				android:textColor="#000000"
				android:text="支付宝"/>

			<TextView
				android:id="@+id/account_number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:textSize="15sp"
				android:textColor="#000000"
				android:text="123456789"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear_noaccount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:visibility="gone">
			<ImageView
				android:id="@+id/withdraw_img"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="center"
				android:layout_marginLeft="29dp"
				android:src="@drawable/lzh_addwithdraw"/>

			<TextView
				android:layout_marginLeft="9dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dp"
				android:textColor="#000000"
				android:text="添加提现账号"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/linear_nodefaultaccount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="29dp"
				android:src="@drawable/lzh_addwithdraw"/>

			<TextView
				android:layout_marginLeft="9dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dp"
				android:textColor="#000000"
				android:text="请选择账号"/>

		</LinearLayout>

		<ImageView
            android:id="@+id/wechat_price_monery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_compile_enter"
			/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/right_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现金额"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/recharge_price_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/right_txt_name"
            android:background="@null"
            android:numeric="decimal"  
            android:gravity="center_vertical|right"
            android:textSize="12sp"
            android:maxLines="1"
            android:maxLength="8" 
            android:textColor="#666666"
            android:textColorHint="#98999a"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="12dp"
        android:background="#e5e5e5" />

    <Button
        android:id="@+id/Withdrawcash_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/wallet_commit_bg_shape"
        android:text="确定"
        android:textColor="@drawable/wallet_commit_bg_selector"
        android:enabled="false" />

</LinearLayout>
</ScrollView>
</LinearLayout>

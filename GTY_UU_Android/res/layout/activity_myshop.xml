<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <com.uugty.uu.common.myview.TopBackView
        android:id="@+id/open_shop_title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <com.uugty.uu.common.myview.CirculHeadImage
            android:id="@+id/my_shop_headImg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" >
        </com.uugty.uu.common.myview.CirculHeadImage>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="17sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_shop_name"
                android:layout_marginTop="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="午饭"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/my_shop_id"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="ID: 123456"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分销奖励"
                    android:textColor="#98999a"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_shop_retail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="0"
                    android:textSize="23sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <View
                android:background="#f5f5f5"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_width="1px"
                android:layout_height="match_parent"/>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分销销售额"
                    android:textColor="#98999a"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_shop_retailSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="0"
                    android:textSize="23sp"
                    android:textColor="#000000"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务奖励"
                    android:textColor="#98999a"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_shop_service_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="0"
                    android:textSize="23sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <View
                android:background="#f5f5f5"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_width="1px"
                android:layout_height="match_parent"/>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务销售额"
                    android:textColor="#98999a"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_shop_service_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="0"
                    android:textSize="23sp"
                    android:textColor="#000000"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/my_shop_publish"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="11dp"
        android:background="#f15353"
        android:text="+ 发布服务"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="46dp" />

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_shop_service_control"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:src="@drawable/lzh_fuwuguanli"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务管理"
                android:textColor="#98999a"
                android:textSize="12sp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_shop_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:src="@drawable/lzh_fenxian"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享赚钱"
                android:textColor="#98999a"
                android:textSize="12sp"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_shop_isu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/lzh_woshixiaou"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是小u"
                android:textColor="#98999a"
                android:textSize="12sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

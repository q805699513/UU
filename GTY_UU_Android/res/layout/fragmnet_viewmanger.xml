<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/fragment_viewmanger_rel">

    <RelativeLayout
        android:id="@+id/chat_item_id"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <com.uugty.uu.common.myview.CirculHeadImage
            android:id="@+id/uuchat_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/uuchat_user_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:textColor="#98999a"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/uuchat_usermessage_content"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/uuchat_user_data"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/uu_content_image"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/uuchat_user_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/uuchat_user_image"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="#565a5c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/uuchat_user_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/uuchat_user_image"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="15"
            android:textColor="#98999a"
            android:textSize="13sp" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="68dp"
            />
    </RelativeLayout>

</RelativeLayout>

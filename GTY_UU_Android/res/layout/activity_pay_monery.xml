<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
	        android:id="@+id/relative"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/boder"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/right_myprice_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dp"
	            android:background="@drawable/phone_back" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:layout_centerVertical="true"
	            android:text="确认并支付"
	            android:textColor="@color/black"
	            android:textSize="18sp" />
	    </RelativeLayout>

    <ScrollView
        android:id="@+id/activity_pay_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

            <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="97dp"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/pay_img"
	            android:layout_width="75dp"
	            android:layout_height="75dp"
	            android:layout_marginBottom="11dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginRight="12dp"
	            android:layout_marginTop="11dp"
	            android:scaleType="fitXY" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/pay_confirm_topic"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="12dp"
	                android:layout_marginTop="17dp"
	                android:singleLine="true"
	                android:ellipsize="end"
	                android:text="测试"
	                android:textColor="#282828"
	                android:textSize="15sp" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="12dp"
	                android:layout_marginTop="9dp"
	                android:text="待支付"
	                android:textColor="#F15353"
	                android:textSize="12sp" />
	
	            <TextView
	                android:id="@+id/pay_confirm_price"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="12dp"
	                android:layout_marginTop="10dp"
	                android:text="测试"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	        </LinearLayout>
	
	    </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" >
            </RelativeLayout>
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="240dp"
	        android:background="#ffffff"
	        android:orientation="vertical" >
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="14dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginTop="14dp"
	            android:text="预定信息"
	            android:textColor="#000000"
	            android:textSize="13sp" />
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_alignParentBottom="true"
	            android:background="#e5e5e5" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#ffffff"
	            android:orientation="horizontal" >
	
	            <LinearLayout
	                android:layout_width="90dp"
	                android:layout_height="match_parent"
	                android:background="#ffffff"
	                android:orientation="vertical" >
	
	                <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:text="出行人"
	                    android:textColor="#98999A"
	                    android:textSize="14dp" />
	
	                <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:text="预定数量"
	                    android:textColor="#98999A"
	                    android:textSize="14dp" />
	
	                <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:text="出行时间"
	                    android:textColor="#98999A"
	                    android:textSize="14dp" />
	                
	                 <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:text="联系人"
	                    android:textColor="#98999A"
	                    android:textSize="14dp" />
	                 
	                  <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:text="手机号"
	                    android:textColor="#98999A"
	                    android:textSize="14dp" />
	                  <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:text="备注"
	                    android:textColor="#98999A"
	                    android:textSize="14dp" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:background="#ffffff"
	                android:orientation="vertical" >
				<TextView
	                    android:id="@+id/pay_people"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:textColor="#000000"
	                    android:textSize="14dp" />
	
	                <TextView
	                    android:id="@+id/pay_orders"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:textColor="#000000"
	                    android:textSize="14dp" />
	
	                <TextView
	                    android:id="@+id/pay_travl_time"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:textColor="#000000"
	                    android:textSize="14dp" />
	                
	                 <TextView
	                    android:id="@+id/pay_people_name"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:textColor="#000000"
	                    android:textSize="14dp" />
	                 
	                  <TextView
	                    android:id="@+id/pay_people_phone"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:textColor="#000000"
	                    android:textSize="14dp" />
	                  <TextView
	                    android:id="@+id/pay_people_note"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="14dp"
	                    android:layout_marginTop="12dp"
	                    android:textColor="#000000"
	                    android:textSize="14dp" />
	        	</LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
            
		<View
	                android:layout_width="match_parent"
	                android:layout_height="10dp"
	                android:background="#f5f5f5" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="14dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginTop="14dp"
	            android:text="选择支付方式"
	            android:textColor="#000000"
	            android:textSize="13sp" />
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_alignParentBottom="true"
	            android:background="#e5e5e5" />
	
	        <RelativeLayout
	            android:id="@+id/pay_one"
	            android:layout_width="match_parent"
	            android:layout_height="50dp" >
	
	            <ImageView
	                android:id="@+id/my_price_monery"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="12dp"
	                android:src="@drawable/rechgre_pay" />
	
	            <TextView
	                android:id="@+id/me_monery"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="12dp"
	                android:layout_toRightOf="@+id/my_price_monery"
	                android:text="我的钱包"
	                android:textColor="#565a5c"
	                android:textSize="15sp" />
	
	            <ImageView
	                android:id="@+id/my_pay_image"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="12dp"/>
	
	
	        </RelativeLayout>
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="50dp"
	            android:background="@color/grid_kuan" />
	
	        <RelativeLayout
	            android:id="@+id/pay_two"
	            android:layout_width="match_parent"
	            android:layout_height="50dp" >
	
	            <ImageView
	                android:id="@+id/wechat_price_monery"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="12dp"
	                android:src="@drawable/rechgre_weixin" />
	
	            <TextView
	                android:id="@+id/wechat_monery"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="12dp"
	                android:layout_toRightOf="@+id/wechat_price_monery"
	                android:text="微信支付"
	                android:textColor="#565a5c"
	                android:textSize="15sp" />
	
	            <ImageView
	                android:id="@+id/wechat_pay_image"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="12dp" />
	            
	        </RelativeLayout>
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="50dp"
	            android:background="@color/grid_kuan" />
	
	        <RelativeLayout
	            android:id="@+id/pay_three"
	            android:layout_width="match_parent"
	            android:layout_height="50dp" >
	
	            <ImageView
	                android:id="@+id/alipay_price_monery"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="12dp"
	                android:src="@drawable/rechgre_alipay" />
	
	            <TextView
	                android:id="@+id/alipay_monery"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="12dp"
	                android:layout_toRightOf="@+id/alipay_price_monery"
	                android:text="支付宝支付"
	                android:textColor="#565a5c"
	                android:textSize="15sp" />
	
	            <ImageView
	                android:id="@+id/alipay_pay_image"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="12dp"/>
	        </RelativeLayout>
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="51dp"
	            android:layout_marginLeft="50dp"
	            android:background="@color/grid_kuan" />
	    	</LinearLayout>
	    </LinearLayout>
	    
    </ScrollView>

	<Button
		android:id="@+id/pay_cofirm"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignBottom="@+id/activity_pay_scrollview"
		android:layout_alignParentRight="true"
		android:background="#f15353"
		android:text="立即支付"
		android:textSize="16dp"
		android:textColor="#ffffff"/>

</RelativeLayout>

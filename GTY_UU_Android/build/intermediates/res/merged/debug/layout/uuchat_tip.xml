<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uuchat_tipback"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/uuchat_tip_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/red_back_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/uuchat_tip_back"
            android:text="U小费"
            android:textColor="#F25C5B" />
    </RelativeLayout>

    <com.uugty.uu.common.myview.WaveView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/tip_random"
            android:layout_width="262dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="212dp"
            android:background="#fdd311"
            android:gravity="center"
            android:text="随机小费"
            android:textColor="#fff" />

        <Button
            android:id="@+id/tip_rcommon"
            android:layout_width="262dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:gravity="center"
            android:text="普通小费"
            android:textColor="#F25C5B" />
    </com.uugty.uu.common.myview.WaveView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="未领取的红包,将于24小时后发起退款"
        android:textColor="#fdd311"
        android:textSize="15sp" />

</LinearLayout>
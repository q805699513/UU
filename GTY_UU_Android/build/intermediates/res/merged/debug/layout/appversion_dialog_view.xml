<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_dialog_bg_shape" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/phone_dialog_bg_shape"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/appversion_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="发现新版本(2.0)"
                android:textColor="@color/base_text_color"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grid_kuan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新内容:"
                    android:textColor="@color/base_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/appversion_dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新内容:"
                    android:textColor="@color/base_text_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/appversion_dialog_bnCancel"
                    android:layout_width="102dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/base_text_color"
                    android:textSize="17sp"
                    android:background="@drawable/text_wechat_backboard"/>

                <TextView
                    android:id="@+id/appversion_dialog_bnConfirm"
                    android:layout_width="102dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="确定"
                    android:background="@drawable/text_login_background"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginLeft="23dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
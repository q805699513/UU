<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <com.uugty.uu.common.myview.TopBackView 
        android:id="@+id/report_titile_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView 
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="选择举报原因"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="#666666"
        />
    <RelativeLayout 
        android:id="@+id/report_rel1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="色情低俗"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />  
            <ImageView
                android:visibility="gone"
                android:id="@+id/report_img1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_shout_confirm_btn"
                />
    </RelativeLayout>
    <View 
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"
            />
     <RelativeLayout 
        android:id="@+id/report_rel2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="赌博"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />  
             <ImageView
                android:visibility="gone"
                android:id="@+id/report_img2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_shout_confirm_btn"
                />
    </RelativeLayout>
    <View 
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"
            />
     <RelativeLayout 
        android:id="@+id/report_rel3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="政治敏感"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />  
             <ImageView
                android:visibility="gone"
                android:id="@+id/report_img3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_shout_confirm_btn"
                />
    </RelativeLayout>
    <View 
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"
            />
     <RelativeLayout 
        android:id="@+id/report_rel4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="欺诈骗我"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />  
             <ImageView
                android:visibility="gone"
                android:id="@+id/report_img4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_shout_confirm_btn"
                />
    </RelativeLayout>
    <View 
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"
            />
     <RelativeLayout 
        android:id="@+id/report_rel5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="违法（暴力恐怖，违禁品等）"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            /> 
             <ImageView
                android:visibility="gone"
                android:id="@+id/report_img5"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_shout_confirm_btn"
                /> 
    </RelativeLayout>
    <View 
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"
            />

    <Button
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/report_send_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textColor="#ffffff"
        android:background="#00a1d9"
        android:text="确定" />

</LinearLayout>

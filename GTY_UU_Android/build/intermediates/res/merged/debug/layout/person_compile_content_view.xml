<?xml version="1.0" encoding="utf-8"?>
<com.uugty.uu.common.myview.WaveView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <com.uugty.uu.common.myview.UnderLineTextAndImage
            android:visibility="gone"
            android:id="@+id/container_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <com.uugty.uu.common.myview.UnderLineTextAndImage
            android:id="@+id/person_compile_name"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <com.uugty.uu.common.myview.UnderLineTextAndImage
            android:id="@+id/person_compile_Label"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <com.uugty.uu.common.myview.UnderLineTextAndImage
            android:id="@+id/person_compile_my"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5" />
    <!-- 基本信息 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="必填信息"
            android:textColor="#565a5c"
            android:textSize="17sp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/constellation"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/birth"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_professional"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="验证信息"
            android:textColor="#565a5c"
            android:textSize="17sp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_mobile"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_idcard"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_legally"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_car"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="可选信息"
            android:textColor="#565a5c"
            android:textSize="17sp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_city"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_school"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/person_compile_language"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <com.uugty.uu.common.myview.UnderLineTextAndImage
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>

</com.uugty.uu.common.myview.WaveView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 主题图片 -->

    <com.uugty.uu.common.myview.SlideShowView
        android:id="@+id/home_page_slideview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="12dp"
	        android:layout_marginBottom="6dp"
	        android:layout_marginTop="6dp"
	        android:text="当地人带你玩"
	        android:textColor="#98999a"
	        android:textSize="10sp" />

    	<HorizontalScrollView
            android:id="@+id/home_page_play_scrollview"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/home_page_play_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp">
            </LinearLayout>
        </HorizontalScrollView>
    	<TextView
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginBottom="6dp"
    	    android:layout_marginLeft="12dp"
    	    android:text="当地人代购"
    	    android:textColor="#98999a"
    	    android:textSize="10sp" />

    	<HorizontalScrollView
            android:id="@+id/home_page_buy_scrollview"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/home_page_buy_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5" />
    <!-- 推荐 -->

    <LinearLayout
        android:id="@+id/home_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玩法推荐"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="9dp"/>
            
            <View 
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_marginTop="10dp"
                android:background="#e5e5e5"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选推荐好玩的景区、去处"
                android:textColor="#98999a"
                android:textSize="10sp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="9dp"/>
            
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/home_page_horizontal_scrollview"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="16dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/home_page_horizontal_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#F5F5F5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingEnd="12dp"
        android:paddingLeft="0dp"
        android:paddingStart="0dp" >

         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
          
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人气推荐"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                />

            <TextView 
                android:id="@+id/home_page_horizontal_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="#00a1d9"
                android:textSize="13sp"
                android:drawableRight="@drawable/home_more_img"
                android:drawablePadding="6dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:minHeight="70dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/uuchat_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:src="@drawable/custom_avatar_image" />

    <TextView
        android:id="@+id/group_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@id/uuchat_user_image"
        android:text="旅行定制"
        android:textColor="#FEC141"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/uuchat_usermessage_content"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/uu_content_image"
        android:textColor="#fff"
        android:textSize="9sp"
        android:layout_centerVertical="true"
        android:gravity="center" />

     <View 
        android:id="@+id/group_chat_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        android:layout_alignParentBottom="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/group_chat_bottom"
        android:background="#e5e5e5"/>
    
   

</RelativeLayout>
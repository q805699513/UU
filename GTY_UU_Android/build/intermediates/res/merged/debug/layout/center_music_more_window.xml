<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#000000"
    android:alpha="0.75"
    android:gravity="bottom|center_horizontal" >


    <TextView
        android:id="@+id/more_window_collect"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="300dp"
        android:clickable="true"
        android:drawableTop="@drawable/lzh_homecustome"
        android:gravity="center|bottom"
        android:textColor="#666666"
        android:text="定制旅行"/>

    <TextView
        android:id="@+id/more_window_auto"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/more_window_collect"
        android:clickable="true"
        android:drawableTop="@drawable/lzh_home_push"
        android:gravity="center|bottom"
        android:textColor="#666666"
        android:text="发布服务"/>

    <TextView
        android:id="@+id/more_window_external"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/more_window_auto"
        android:clickable="true"
        android:drawableTop="@drawable/lzh_uufriend"
        android:gravity="center|bottom"
        android:textColor="#666666"
        android:text="uu圈"/>

    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/more_window_auto"
        android:src="@drawable/lzh_home_bottom" />

</RelativeLayout>
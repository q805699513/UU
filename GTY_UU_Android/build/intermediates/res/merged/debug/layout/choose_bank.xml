<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder"
        android:gravity="center_vertical" >
        <include layout="@layout/tabbar_text" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="银行卡"
            android:textColor="@color/black"
            android:textSize="18sp" />
       
      
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:background="#fff"
        android:text="选择银行卡类型"
        android:textColor="@color/base_text_color"
        android:textSize="17sp"
        android:layout_marginLeft="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <com.uugty.uu.common.myview.WaveView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/bank_china_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_china_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_china" />

                <TextView
                    android:id="@+id/bank_china_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_china_image"
                    android:text="中国银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/bank_china_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_china_image_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bank_abc_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_abc_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_abc" />

                <TextView
                    android:id="@+id/bank_abc_iamge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_abc_image"
                    android:text="农业银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_abc_iamge_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bank_icbc_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_icbc_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_icbc" />

                <TextView
                    android:id="@+id/bank_icbc_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_icbc_iamge"
                    android:text="中国工商银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_icbc_image_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bank_ccb_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_ccb_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_ccb" />

                <TextView
                    android:id="@+id/bank_ccb_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_ccb_iamge"
                    android:text="中国建设银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_ccb_image_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bank_bcm_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_bcm_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_bcm" />

                <TextView
                    android:id="@+id/bank_bcm_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_bcm_iamge"
                    android:text="中国交通银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_bcm_image_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bank_cmb_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_cmb_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_cmb" />

                <TextView
                    android:id="@+id/bank_cmb_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_cmb_iamge"
                    android:text="中国招商银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_cmb_image_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bank_ceb_rel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#fff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bank_ceb_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/bank_ceb" />

                <TextView
                    android:id="@+id/bank_ceb_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/bank_ceb_iamge"
                    android:text="中国光大银行"
                    android:textColor="#565a5c"
                    android:textSize="17sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/bank_ceb_image_text"
                    android:layout_alignParentBottom="true"
                    android:background="#E5E5E5" />
            </RelativeLayout>
        </com.uugty.uu.common.myview.WaveView>
    </ScrollView>

</LinearLayout>
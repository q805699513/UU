<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00A1D8" >

        <ImageView
            android:id="@+id/comments_reply_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/phone_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="回复"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/comments_reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comments_reply_head_iamge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/no_default_head_img"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/white" />

        <TextView
            android:id="@+id/comments_reply_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/comments_reply_head_iamge"
            android:text="崽崽"
            android:textColor="#565a5c"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_view_board" >

        <EditText
            android:id="@+id/comments_reply_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comments_reply_one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/evaluate_add"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:viewAspectRatio="1.0" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comments_reply_two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="17dp"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/evaluate_add"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:viewAspectRatio="1.0" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comments_reply_three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="17dp"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/evaluate_add"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:viewAspectRatio="1.0" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comments_reply_four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="17dp"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/evaluate_add"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:viewAspectRatio="1.0" />
    </LinearLayout>

</LinearLayout>
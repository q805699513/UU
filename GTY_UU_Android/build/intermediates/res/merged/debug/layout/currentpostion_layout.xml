<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/nearby_sure_text"
            android:background="#f5f5f5" >

        <ImageView 
            android:layout_marginLeft="10dp"
            android:id="@+id/location_search_hint_img"
            android:layout_alignParentLeft="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/location_city_search_img"
            android:layout_centerVertical="true"
            />
        <com.uugty.uu.common.myview.EmojiEdite
            android:layout_marginLeft="10dp"  
            android:layout_toRightOf="@+id/location_search_hint_img" 
            android:id="@+id/nearby_city_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#f5f5f5"                    
           	android:textSize="15sp"
           	 android:imeOptions="actionDone"
            android:inputType="text|textAutoComplete"
            android:singleLine="true"
            android:hint="搜索"                        
            />
          <ImageView 
            android:layout_marginRight="10dp"
            android:id="@+id/location_delete_hint_img"
            android:layout_alignParentRight="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/location_delete_hint_img"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        </RelativeLayout>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/nearby_sure_text" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#00a0db"
            android:layout_marginRight="12dp"
            android:gravity="center"
            />
    </RelativeLayout>
	<ListView 
	    android:id="@+id/nearby_city_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none"
	    android:divider="#e5e5e5"
	    android:dividerHeight="1px"
	    ></ListView>
</LinearLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5" />

    <FrameLayout
        android:id="@+id/home_radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:alpha="0.9"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grid_kuan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/home_boder"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/radio_button1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/home_find" />

                <TextView
                    android:id="@+id/radio_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="6dp"
                    android:text="首页"
                    android:textColor="#00a1d9"
                    android:textSize="10sp" />
            </LinearLayout>
			
			<LinearLayout
			    android:id="@+id/map_rel"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:orientation="vertical" >
			
			    <ImageView
			        android:id="@+id/radio_button3"
			        android:layout_width="25dp"
			        android:layout_height="25dp"
			        android:layout_gravity="center_horizontal"
			        android:layout_marginTop="7dp"
			        android:src="@drawable/home_map" />
			
			    <TextView
			        android:id="@+id/radio_textview3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal|bottom"
			        android:layout_marginBottom="6dp"
			        android:text="向导"
			        android:textColor="#98999a"
			        android:textSize="10sp" />
			</LinearLayout>
			
			<LinearLayout
                android:id="@+id/home_bottom_mid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="false"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="false"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="6dp"
                    android:text="发布"
                    android:textColor="#98999a"
                    android:textSize="10sp" />
            </LinearLayout>
			
            <LinearLayout
                android:id="@+id/message_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/radio_button2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/home_message" />

                    <TextView
                        android:id="@+id/unread_msg_number"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/uu_content_image"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:visibility="invisible" />
                </FrameLayout>

                <TextView
                    android:id="@+id/radio_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="6dp"
                    android:text="留言"
                    android:textColor="#98999a"
                    android:textSize="10sp" />
            </LinearLayout>

            

            <LinearLayout
                android:id="@+id/dialog_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/radio_button4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/home_user" />

                <TextView
                    android:id="@+id/radio_textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="6dp"
                    android:text="我的"
                    android:textColor="#98999a"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="14dp">
            
            <ImageView
                android:id="@+id/home_bottom_img"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_mid" />
            
        </FrameLayout>

</FrameLayout>

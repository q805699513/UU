<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.uugty.uu.common.myview.JoyGridView
        android:id="@+id/persondate_photogrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:verticalSpacing="2dp"
        android:focusable="false" 
        android:focusableInTouchMode="false"
        >
    </com.uugty.uu.common.myview.JoyGridView>
<RelativeLayout
        android:id="@+id/person_phone_nodate_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        
               >
        <TextView 
            android:layout_below="@+id/person_phone_background_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="告诉ta~"
            />

        <TextView
            android:id="@+id/person_phone_background_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="主人没有上传照片哦" />

        <ImageView
            android:id="@+id/person_phone_background_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/person_phone_background_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/person_single_show" />

    </RelativeLayout>
</LinearLayout>
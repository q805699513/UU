<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="16dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_services_listview_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_image_hight"
            fresco:failureImage="@drawable/uu_default_image_one"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/default_image"
            fresco:placeholderImageScaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/my_services_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_services_listview_item_delete_image" />

            <ImageView
                android:id="@+id/my_services_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_services_listview_item_share_image"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingBottom="10dp"
        android:paddingTop="18dp" >

        <TextView
            android:id="@+id/my_services_listview_item_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_services_listview_item_route_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="#1AA1D9"
            android:textSize="11sp" />
        <!-- 时间 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:textColor="#98999a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_services_listview_item_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#98999a"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 价格 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#d02e2e"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_services_listview_item_route_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#d02e2e"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e5" />

</LinearLayout>
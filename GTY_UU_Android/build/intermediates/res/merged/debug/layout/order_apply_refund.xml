<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingRight="26dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="退款原因"
            android:textSize="15sp"
            android:textColor="#000000" />

    </RelativeLayout>
    
    <EditText 
        android:id="@+id/return_resone"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:hint="退款原因（必填）"
        android:textColorHint="#98999a"
        android:textColor="#98999a"
        android:textSize="13dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="退款金额"
            android:textSize="15sp"
            android:textColor="#000000" />

    </RelativeLayout>
    
    <EditText 
        android:id="@+id/return_money"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:hint="请输入退款金额"
        android:textColorHint="#98999a"
        android:textColor="#98999a"
        android:textSize="13dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="退款说明"
            android:textSize="15sp"
            android:textColor="#000000" />
        <TextView
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="（可不填）"
            android:textSize="15sp"
            android:textColor="#98999a" />

    </RelativeLayout>
    
    <EditText 
        android:id="@+id/return_detail"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:hint="请输入退款说明"
        android:textColorHint="#98999a"
        android:textColor="#98999a"
        android:textSize="13dp"/>
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:background="#f5f5f5" />

    <Button
        android:id="@+id/order_apply_refund_commit"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="23dp"
        android:background="#00a1d9"
        android:text="提交申请"
        android:textColor="#fff" />

</LinearLayout>
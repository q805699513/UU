<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_image_hight"
    android:orientation="vertical" >

    <!-- 显示个人生活照，轮循 -->

    <RelativeLayout
        android:id="@+id/person_compile_head_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/person_compile_background_img" />

        <com.uugty.uu.common.myview.CirculHeadImage
            android:id="@+id/person_compile_circuleHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
        </com.uugty.uu.common.myview.CirculHeadImage>
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/regist_back_lin"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center"
            android:src="@drawable/back_title_img" />
        <TextView
            android:id="@+id/regist_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="38dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="注册"
            android:textSize="18sp"
            android:layout_width="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/regist_data_rel"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/regist_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_height="match_parent"
                android:textColor="#98999a"
                android:gravity="center_vertical"
                android:text="国家和地区"
                android:textSize="15sp"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/country_name"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:gravity="right|center"
                android:textColor="#000000"
                android:text="中国"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/person_compile_enter"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_height="1px"
            android:background="#e5e5e5"/>
        <LinearLayout
            android:id="@+id/regist_username_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regist_phonecode"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="+86"
                android:textSize="15sp"
                android:layout_width="wrap_content" />

            <View
                android:layout_height="25dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center"
                android:background="#e5e5e5"
                android:layout_width="1px" />

            <EditText
                android:id="@+id/regist_edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11"
                android:numeric="integer"
                android:textColor="@color/login_hint_color"
                android:textColorHint="@color/login_hint_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/regist_username_clear_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/edittext_clear_icon"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_height="1px"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:id="@+id/regist_sms_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_yan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:maxLength="6"
                android:numeric="integer"
                android:textColor="@color/login_hint_color"
                android:textColorHint="@color/login_hint_color"
                android:textSize="15sp" />

            <View
                android:layout_height="25dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center"
                android:background="#e5e5e5"
                android:layout_width="1px" />
            <TextView
                android:id="@+id/send_messagebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/regster_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#a5e3f8"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/regsit_argment_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="注册即我表示同意UU的"
                android:textColor="@color/login_hint_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/regist_agreement_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="服务条款"
                android:textColor="@color/login_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

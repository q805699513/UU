<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/publish_item_img"
        android:layout_width="106dp"
        android:layout_height="106dp"
        fresco:failureImage="@drawable/default_image"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/default_image"
        fresco:placeholderImageScaleType="fitXY"
        fresco:viewAspectRatio="1.0" >
    </com.facebook.drawee.view.SimpleDraweeView>

    <ImageView
        android:id="@+id/publish_delete"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="-18dp"
        android:layout_toRightOf="@+id/publish_item_img"
        android:src="@drawable/location_delete_hint_img"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/group_chat_search_lin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/group_chat_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/order_drawbakc_text_bg_shape"
            android:gravity="left|center"
            android:hint="搜索群"
            android:paddingEnd="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingStart="10dp"
            android:textColor="#98999A"
            android:textSize="14sp"
            android:imeOptions="actionSearch"
            android:maxLength="10"
            android:singleLine="true" />

        <TextView
            android:id="@+id/group_chat_search_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:text="取消"
            android:textColor="#00A0DB"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5" />

    <ListView
        android:id="@+id/group_chat_search_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>